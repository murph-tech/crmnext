{
    "apps": [
        {
            "name": "crm-backend",
            "cwd": "/var/www/crm-next/backend",
            "script": "dist/index.js",
            "instances": 1,
            "autorestart": true,
            "watch": false,
            "max_memory_restart": "500M",
            "env": {
                "NODE_ENV": "production",
                "PORT": 4000
            },
            "error_file": "/var/log/pm2/crm-backend-error.log",
            "out_file": "/var/log/pm2/crm-backend-out.log",
            "time": true
        },
        {
            "name": "crm-frontend",
            "cwd": "/var/www/crm-next",
            "script": "npm",
            "args": "start",
            "instances": 1,
            "autorestart": true,
            "watch": false,
            "max_memory_restart": "1G",
            "env": {
                "NODE_ENV": "production",
                "PORT": 3000
            },
            "error_file": "/var/log/pm2/crm-frontend-error.log",
            "out_file": "/var/log/pm2/crm-frontend-out.log",
            "time": true
        }
    ]
}